<interface>
  <name>tunl1</name>
  <description>IPIP tunnel interface</description>

  <ipip>
    <local-address>local_ip</local-address>
    <remote-address>remote_ip</remote-address>
  </ipip>

  <ipv4:static>
    <address>
      <local>tunnel_ip/24</local>
    </address>
  </ipv4:static>
</interface>

<interface>
  <name>iface</name>
  <ipv4:static>
    <address>
      <local>local_ip/15</local>
    </address>
  </ipv4:static>
</interface>
